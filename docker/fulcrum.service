[Unit]
Description=Fulcrum SPV Server
After=bitcoind.service

[Service]
User=fulcrum
Group=fulcrum

Type=forking
ExecStart=rm -fr /opt/fulcrum/data && \
/opt/fulcrum/Fulcrum /opt/fulcrum/fulcrum.conf

Restart=always
PrivateTmp=true
TimeoutStopSec=60s
TimeoutStartSec=2s
StartLimitInterval=120s
StartLimitBurst=5

[Install]
WantedBy=fulcrum.service